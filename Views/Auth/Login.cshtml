@model LoginViewModel

@{
    ViewData["Title"] = "Login Page";
}

<form asp-controller="Auth" asp-action="Login" method="Post" class="form-signin">   
    <div class="form-group col-4">
         <h3>Please sign in</h3>
        <label class="sr-only">Username</label>
        <input asp-for="UserName" class="form-control" placeholder="Email address" required autofocus />
    </div>
    <div class="form-group col-4">
        <label class="sr-only">Password</label>
        <input asp-for="Password" class="form-control" placeholder="Password" type="password" required />
    </div>
    <div class="col-4">
        <div class="form-check">
            <label>
                <input type="checkbox" value="remember-me" class="form-check-input">
                <label class="form-check-label" for="exampleCheck1">Remember me</label>
            </label>
        </div>
    </div>
    <div class="form-group col-4">
        <input type="submit" value="Sign In" class="btn btn-primary" />
    </div>
</form>