@model IEnumerable<Post>

@{
    ViewData["Title"] = "Admin Panel";
}

<h3>Admin Panel</h3>
<a asp-controller="Panel" asp-action="Edit">Add</a>
<div>
    <ul>
        @foreach(var post in Model)
        {
            <li>
                @post.Title
                <a asp-controller="Panel" asp-action="Edit" asp-route-id="@post.Id">Edit</a>
                <a asp-controller="Panel" asp-action="Remove" asp-route-id="@post.Id">Remove</a>
            </li>
        }
    </ul>
</div>
